<%- include('../includes/head.ejs') %> 
<link rel="stylesheet" href="/css/form.css">

</head>
<body>
    <%- include('../includes/navigation.ejs') %> 
    
    
    <main>
        <h2>Login</h2>
        <% if (errorMessage) { %>
            <p class="alertMessage"> <%= errorMessage %> </p>
         
        <% } %>
        <form class="form-control" action="/login" method="POST">
            <label for="email">
                E-mail

                <input type="email" required name="email" id="email"  value="<% if (oldInput.email) { %><%= oldInput.email %><% } %>">
            </label>
            <label for="password">
                Password
                
                <input type="password"  required name="password"  step="0.01" id="password" >
            </label>  

            <input type="hidden" value="<%= csrfToken %>" name="_csrf">        
            <button class="btn" type="submit"> Login </button>
            <div class="centered">
                <a href="/reset"> Reset Password</a>
            </div>
                
                
        </form>
    </main>
    
    <%- include('../includes/end.ejs') %> 
