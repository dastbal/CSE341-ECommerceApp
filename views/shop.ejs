<%- include('includes/head.ejs') %> 
</head>
<body>
    <%- include('includes/navigation.ejs')  %> 
    
    
    <main>
        <% if (prods.length >0) { %>
            
            <div class="grid">
                <% prods.forEach( pizza => { %>
                 
                    <article class="card">
                        <div class="card__header">
                            <h2 class="card__title"> <%= pizza.title %> </h2>
                        </div>
                        <div class="card__image">
                        <img src="https://picsum.photos/200" alt="pizza image">
                    </div>
                    <div class="card__body">
                        <h2 class="pizza-price">
                            <%= pizza.price %> 
                    </h2>
                    <p class="pizza-description">Cheese</p>
                </div>
                <div class="card__action">
                    <button class="btn"> Add a New Pizza</button>
                </div>
            </article>
            <% }) %>
        </div>
        <% } else { %>
            <h2>No Pizza</h2>
            <% }  %>
            
        </main>

    <%- include('includes/end.ejs')  %> 